<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Send">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:text="@string/emailVal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/labEmail"
        android:id="@+id/labEmail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/emailInput"
        android:layout_toStartOf="@+id/emailInput"
        android:layout_toLeftOf="@+id/emailInput"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/date"
        android:layout_below="@+id/emailInput"
        android:layout_alignRight="@+id/emailInput"
        android:layout_alignEnd="@+id/emailInput"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/labDate"
        android:id="@+id/labDate"
        android:layout_alignBottom="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/date"
        android:layout_toStartOf="@+id/date"
        android:layout_alignTop="@+id/date"
	 />


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tog0"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/emailInput"
        android:layout_alignRight="@+id/emailInput"
        android:layout_alignEnd="@+id/emailInput"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labBut0"
        android:id="@+id/labTog0"
        android:layout_above="@+id/tog1"
        android:layout_toLeftOf="@+id/tog0"
        android:layout_toStartOf="@+id/tog0"
        android:layout_alignTop="@+id/tog0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
	 />


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tog1"
        android:layout_below="@+id/tog0"
        android:layout_alignRight="@+id/tog0"
        android:layout_alignEnd="@+id/tog0"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labBut1"
        android:id="@+id/labTog1"
        android:layout_alignBottom="@+id/tog1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tog1"
        android:layout_toStartOf="@+id/tog1"
        android:layout_below="@+id/tog0"
	 />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tog2"
        android:layout_below="@+id/tog1"
        android:layout_alignRight="@+id/tog1"
        android:layout_alignEnd="@+id/tog1"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labBut2"
        android:id="@+id/labTog2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tog2"
        android:layout_toStartOf="@+id/tog2"
        android:layout_above="@+id/tog3"
        android:layout_alignTop="@+id/tog2"
	 />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tog3"
        android:layout_below="@+id/tog2"
        android:layout_alignRight="@+id/tog2"
        android:layout_alignEnd="@+id/tog2"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labBut3"
        android:id="@+id/labTog3"
        android:layout_above="@+id/tog4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tog3"
        android:layout_toStartOf="@+id/tog3"
        android:layout_below="@+id/tog2"
	 />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tog4"
        android:layout_below="@+id/tog3"
        android:layout_alignRight="@+id/tog3"
        android:layout_alignEnd="@+id/tog3"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labBut4"
        android:id="@+id/labTog4"
        android:layout_above="@+id/tog5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tog4"
        android:layout_toStartOf="@+id/tog4"
        android:layout_alignTop="@+id/tog4"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />



    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tog5"
        android:layout_below="@+id/tog4"
        android:layout_alignRight="@+id/tog4"
        android:layout_alignEnd="@+id/tog4"
        android:textOff="@string/togNotTested"
        android:textOn="@string/togTested"
	 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/labBut5"
        android:id="@+id/labTog5"
        android:layout_alignBottom="@+id/tog5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tog5"
        android:layout_toStartOf="@+id/tog5"
        android:layout_below="@+id/tog4"
	 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/togLock"
        android:id="@+id/butSend"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tog5"
        android:layout_toStartOf="@+id/tog5"
        android:onClick="sendMail"
	 />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/togLock"
        android:id="@+id/togSendLock"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tog5"
        android:layout_alignEnd="@+id/tog5"
        android:textOff="@string/togLock"
        android:textOn="@string/togUnlock"
	 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settings"
        android:layout_above="@+id/labTog0"
        android:layout_toRightOf="@+id/labDate"
        android:layout_toEndOf="@+id/labDate"
        android:onClick="openSettings"

        />


</RelativeLayout>